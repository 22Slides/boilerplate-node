<section
id="widget-<%= locals.id %>"
class="widget form form--default"
data-id="<%= locals.id %>"
data-widgettype="<%= locals.type %>">

	<form class="form__container" method="post" action="">

		<input type="hidden" name="id" value="<%= locals.id %>">

		<label class="form__element">
			<em class="form__label">Your Name</em>
			<input class="form__input" type="text" name="name" placeholder="Your Name" required>
		</label>

		<label class="form__element">
			<em class="form__label">Your Email</em>
			<input class="form__input" type="email" name="email" placeholder="Your Email" required>
		</label>

		<label class="form__element">
			<em class="form__label">Message</em>
			<textarea class="form__input form__input--textarea" name="message" placeholder="Message" required></textarea>
		</label>

		<button class="form__button">Send Message</button>

		<div class="form__feedback"></div>

	</form>

</section>
